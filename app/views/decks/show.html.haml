%h2= @deck.title
%h3
  This deck containts
  %strong= @deck.cards.count
  cards.
  %small
    = link_to 'Add card', new_deck_card_path(@deck)

.row.mb-4
  .col-sm-4
    %h4= link_to 'Repeat Distributed', repeat_distributed_deck_path(@deck)
  .col-sm-4
    %h4= link_to 'Repeat Random', repeat_random_deck_path(@deck)
  .col-sm-4
    %h4= link_to 'Repeat Orderly', repeat_orderly_deck_path(@deck)

.row.mb-4
  .col-sm-4
    %h4= link_to 'Practice!', new_repeat_session_path(decks: [@deck])


%ol
  - @deck.cards.active.each do |card|
    %li
      = link_to card.question, deck_card_path(@deck, card)

- if @deck.cards.archived.count > 0
  %h4 Archived
  %ol
    - @deck.cards.archived.each do |card|
      %li
        = link_to card.question, deck_card_path(@deck, card)