= form_tag repeat_session_url do
  = label_tag :type
  = select_tag :type, "<option>distributed</option><option>random</option><option>orderly</option>".html_safe

  = label_tag :questions
  = text_field_tag :questions

  - @decks.map(&:id).each do |id|
    = hidden_field_tag 'decks[]', id

  = submit_tag 'Start'
